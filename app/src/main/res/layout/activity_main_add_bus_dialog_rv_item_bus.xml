<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="60dp"
             android:background="@color/white"
             android:foreground="?attr/selectableItemBackground">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="24dp"
              android:layout_gravity="center_vertical"
              android:id="@+id/tv_bus_number"
              android:text="6211"
              android:textSize="22sp"
              android:textColor="@color/black"/>

    <ImageView android:layout_width="30dp" android:layout_height="30dp"
               android:padding="4dp"
               android:layout_marginRight="20dp"
               android:layout_gravity="end|center_vertical"
               android:id="@+id/iv_add_favorite_bus"
               android:background="@drawable/activity_main_add_bus_dialog_button_white_bg"
               android:tint="@color/gray400"
               app:srcCompat="@drawable/baseline_add_black_48dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_gravity="bottom" android:background="@color/gray100"/>

</FrameLayout>