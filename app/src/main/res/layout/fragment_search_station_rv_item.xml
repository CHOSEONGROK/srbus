<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="16dp"
              android:id="@+id/tv_station_name"
              android:text="대신시장"
              android:textSize="15sp"
              android:textColor="@color/black"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="2dp" android:layout_marginBottom="16dp"
              android:id="@+id/tv_station_number"
              android:text="19228"
              android:textSize="13sp"
              android:textColor="@color/gray600"
              app:layout_constraintLeft_toLeftOf="@id/tv_station_name"
              app:layout_constraintTop_toBottomOf="@id/tv_station_name" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:id="@+id/tv_separator"
              android:text="I"
              android:textSize="13sp"
              android:textColor="@color/gray400"
              app:layout_constraintLeft_toRightOf="@id/tv_station_number"
              app:layout_constraintTop_toTopOf="@id/tv_station_number"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:id="@+id/tv_next_station"
              android:text="신길역 방면"
              android:textSize="13sp"
              android:textColor="@color/gray600"
              app:layout_constraintLeft_toRightOf="@id/tv_separator"
              app:layout_constraintTop_toTopOf="@id/tv_separator"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
               android:paddingLeft="14dp" android:paddingRight="14dp"
               android:paddingTop="24dp" android:paddingBottom="24dp"
               android:id="@+id/iv_station_favorite"
               android:tint="@color/gray300"
               app:srcCompat="@drawable/baseline_favorite_white_48dp"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <View android:layout_width="match_parent" android:layout_height="0.8dp" android:background="@color/gray200"
          app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>