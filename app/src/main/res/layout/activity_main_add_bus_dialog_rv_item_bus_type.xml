<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="wrap_content"
             android:background="@color/gray200">

    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_gravity="top" android:background="@color/gray200"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="3dp" android:layout_marginBottom="3dp"
              android:layout_marginLeft="24dp"
              android:layout_gravity="center_vertical"
              android:id="@+id/tv_bus_type"
              android:text="tv_bus_type"
              android:textSize="12sp"
              android:textColor="@color/gray500"/>

    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_gravity="bottom" android:background="@color/gray200"/>

</FrameLayout>