<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginTop="16dp"
              android:id="@+id/tv_bus_number"
              android:text="641"
              android:textSize="18sp"
              android:textColor="@color/blue800"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="2dp" android:layout_marginBottom="16dp"
              android:id="@+id/tv_bus_city"
              android:text="서울"
              android:textSize="12sp"
              app:layout_constraintLeft_toLeftOf="@id/tv_bus_number"
              app:layout_constraintTop_toBottomOf="@id/tv_bus_number" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:id="@+id/tv_bus_type"
              android:text="간선버스"
              android:textSize="12sp"
              app:layout_constraintLeft_toRightOf="@id/tv_bus_city"
              app:layout_constraintTop_toTopOf="@id/tv_bus_city"/>
    
    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
               android:paddingLeft="14dp" android:paddingRight="14dp"
               android:paddingTop="24dp" android:paddingBottom="24dp"
               android:id="@+id/iv_bus_favorite"
               app:srcCompat="@drawable/baseline_favorite_white_48dp"
               android:tint="@color/gray300"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>