<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent" android:layout_height="65dp"
                                             android:layout_marginTop="12dp"
                                             android:background="@color/white"
                                             android:foreground="?attr/selectableItemBackground">

    <!-- Separator -->
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray200" app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="0dp"
              android:layout_marginLeft="24dp"
              android:id="@+id/tv_station_name"
              android:text="tv_station_name"
              android:textSize="16sp"
              android:textColor="@color/black"
              app:layout_constraintVertical_chainStyle="packed"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@id/tv_next_station"
              app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="2dp" android:layout_marginBottom="0dp"
              android:id="@+id/tv_next_station"
              android:text="tv_next_station"
              android:textSize="12sp"
              android:textColor="@color/gray400"
              android:visibility="visible"
              app:layout_constraintTop_toBottomOf="@id/tv_station_name" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="@id/tv_station_name"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
              android:paddingTop="8dp" android:paddingBottom="8dp"
              android:paddingLeft="8dp" android:paddingRight="8dp"
              android:id="@+id/tv_add_favorite_bus"
              android:text="＋버스"
              android:textSize="12sp"
              android:textColor="@color/gray600"
              android:background="@drawable/activity_main_add_bus_button_background"
              android:foreground="?attr/selectableItemBackground"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"/>

    <!-- Separator -->
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/gray200" app:layout_constraintBottom_toBottomOf="parent"/>.

</android.support.constraint.ConstraintLayout>